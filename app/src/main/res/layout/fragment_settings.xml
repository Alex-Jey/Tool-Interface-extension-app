<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alexj.clientps10.FragmentSettings">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ip_title" />
        <EditText
            android:id="@+id/settings_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="192.168.1.105"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ip_title" />
        <EditText
            android:id="@+id/settings_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10001"/>
        <Button
            android:id="@+id/button_settings_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Применить"/>
    </LinearLayout>




</FrameLayout>
